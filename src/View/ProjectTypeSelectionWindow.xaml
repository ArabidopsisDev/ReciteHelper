<Window
    x:Class="ReciteHelper.View.ProjectTypeSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="创建新项目 - ReciteHelper"
    Width="1000"
    Height="650"
    Background="#F5F7F9"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Item type item style  -->
        <Style x:Key="ProjectTypeItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA" />
                    <Setter Property="BorderBrush" Value="#007ACC" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Selected project style  -->
        <Style
            x:Key="SelectedProjectTypeItemStyle"
            BasedOn="{StaticResource ProjectTypeItemStyle}"
            TargetType="Border">
            <Setter Property="Background" Value="#F0F7FF" />
            <Setter Property="BorderBrush" Value="#007ACC" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <!--  Item type button style  -->
        <Style x:Key="ProjectTypeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!--  Main button style  -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="100" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC" />
                    <Setter Property="Foreground" Value="#888888" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Secondary button style  -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="100" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA" />
                    <Setter Property="BorderBrush" Value="#007ACC" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Search box style  -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DEE2E6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left side: Navigation and announcements  -->
        <Border
            Grid.Column="0"
            Background="White"
            BorderBrush="#E9ECEF"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Navigation title  -->
                <Border
                    Grid.Row="0"
                    Padding="25,20"
                    Background="#F8F9FA"
                    BorderBrush="#E9ECEF"
                    BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="选择项目类型" />
                        <TextBlock
                            Margin="0,5,0,0"
                            FontSize="12"
                            Foreground="#666666"
                            Text="开始新的学习项目" />
                    </StackPanel>
                </Border>

                <!--  Notice Board  -->
                <ScrollViewer
                    Grid.Row="1"
                    Padding="25"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#333333"
                            Text="📢 软件公告" />

                        <StackPanel Margin="0,0,0,20" Orientation="Vertical">
                            <Border
                                Margin="0,0,0,20"
                                Padding="15"
                                Background="#F8F9FA"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#007ACC"
                                        Text="版本 v3-preview 发布" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="修复了创建项目时由于AI幻觉引起的异常；修复了部分知识点为空导致聚类出现异常的问题。"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        FontSize="11"
                                        Foreground="#888888"
                                        Text="2026-01-03" />
                                </StackPanel>
                            </Border>

                            <Border
                                Margin="0,0,0,20"
                                Padding="15"
                                Background="#F8F9FA"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#007ACC"
                                        Text="模拟考试系统升级" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="升级模拟考试功能，支持自定义考试参数，提供沉浸式考试体验。"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        FontSize="11"
                                        Foreground="#888888"
                                        Text="2025-12-13" />
                                </StackPanel>
                            </Border>

                            <Border
                                Margin="0,0,0,20"
                                Padding="15"
                                Background="#F8F9FA"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#007ACC"
                                        Text="项目导入功能优化" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="支持更多文件格式导入，优化PDF解析算法，提升题目识别准确率。"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        FontSize="11"
                                        Foreground="#888888"
                                        Text="2025-12-02" />
                                </StackPanel>
                            </Border>

                            <Border
                                Padding="15"
                                Background="#F8F9FA"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                CornerRadius="4">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="#007ACC"
                                        Text="优化分块算法" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="通过对分块算法的优化，提升了项目处理速度，减少了调用成本"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        FontSize="11"
                                        Foreground="#888888"
                                        Text="2025-11-13" />
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!--  More announcements and notices  -->
                        <Border
                            Margin="0,20,0,0"
                            Padding="12"
                            Background="#FFF3CD"
                            BorderBrush="#FFEEBA"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="11"
                                Foreground="#856404"
                                Text="💡 更多更新内容请查看帮助文档或访问我们的官方网站。"
                                TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--  Right side: Project type selection  -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Search box  -->
            <Border
                Grid.Row="0"
                Padding="20"
                Background="White"
                BorderBrush="#E9ECEF"
                BorderThickness="1"
                CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image
                        Width="20"
                        Height="20"
                        Margin="0,0,15,0"
                        Source="pack://application:,,,/ReciteHelper;component/Images/search.png" />

                    <TextBox
                        x:Name="SearchTextBox"
                        Grid.Column="1"
                        Style="{StaticResource SearchTextBoxStyle}"
                        TextChanged="SearchTextBox_TextChanged">
                        <TextBox.ToolTip>
                            <ToolTip>
                                <TextBlock Text="输入项目类型名称或描述进行搜索" />
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>
                </Grid>
            </Border>

            <!--  List of project types  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,20,0,0"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  List of project types  -->
                    <ItemsControl x:Name="ProjectTypesItemsControl" Grid.Row="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ProjectTypeBorder" Style="{StaticResource ProjectTypeItemStyle}">
                                    <Button
                                        Click="ProjectTypeButton_Click"
                                        Style="{StaticResource ProjectTypeButtonStyle}"
                                        Tag="{Binding}">
                                        <Grid Margin="20">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Project icon  -->
                                            <Border
                                                Grid.Column="0"
                                                Width="64"
                                                Height="64"
                                                Margin="0,0,20,0"
                                                Background="#E3F2FD"
                                                CornerRadius="8">
                                                <Image
                                                    Width="32"
                                                    Height="32"
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    Source="{Binding IconPath}" />
                                            </Border>

                                            <!--  Project Information  -->
                                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Foreground="#333333"
                                                    Text="{Binding TypeName}" />
                                                <TextBlock
                                                    Margin="0,8,0,0"
                                                    FontSize="13"
                                                    Foreground="#666666"
                                                    LineHeight="20"
                                                    Text="{Binding Description}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  No results reported  -->
                    <Border
                        x:Name="NoResultsPanel"
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        Padding="40"
                        Background="White"
                        BorderBrush="#E9ECEF"
                        BorderThickness="1"
                        CornerRadius="4"
                        Visibility="Collapsed">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <Image
                                Width="64"
                                Height="64"
                                Margin="0,0,0,20"
                                Opacity="0.5"
                                Source="pack://application:,,,/ReciteHelper;component/Images/search.png" />
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#666666"
                                Text="未找到匹配的项目类型" />
                            <TextBlock
                                FontSize="13"
                                Foreground="#888888"
                                Text="尝试使用不同的关键词搜索"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!--  Button area  -->
            <Border
                Grid.Row="2"
                Margin="0,20,0,0"
                Padding="0,20,0,0"
                Background="White"
                BorderBrush="#E9ECEF"
                BorderThickness="0,1,0,0">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="BackButton"
                        Click="BackButton_Click"
                        Content="返回"
                        Style="{StaticResource SecondaryButtonStyle}" />
                    <Button
                        x:Name="ConfirmButton"
                        Click="ConfirmButton_Click"
                        Content="确定"
                        IsEnabled="False"
                        Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>