<Window
    x:Class="ReciteHelper.View.KnowledgePointWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReciteHelper"
    xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="知识点学习 - ReciteHelper"
    Width="1000"
    Height="700"
    Background="#F5F7F9"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ChapterHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="ChapterToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="KnowledgeItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="KnowledgeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="40,12,20,12" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9ECEF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  掌握状态样式  -->
        <Style x:Key="MasteredCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="80" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Background="White"
            BorderBrush="#E9ECEF"
            BorderThickness="0,0,1,0">
            <DockPanel>
                <Border
                    Padding="20,15"
                    Background="#F8F9FA"
                    BorderBrush="#E9ECEF"
                    BorderThickness="0,0,0,1"
                    DockPanel.Dock="Top">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Text="知识点列表" />
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ChaptersItemsControl" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5" Style="{StaticResource ChapterHeaderStyle}">
                                    <StackPanel>
                                        <Button
                                            Click="ChapterToggleButton_Click"
                                            Style="{StaticResource ChapterToggleButtonStyle}"
                                            Tag="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#333333"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        Margin="5,0,0,0"
                                                        FontSize="13"
                                                        Foreground="#666666"
                                                        Text="{Binding Number, StringFormat=' (第{0}章)'}" />
                                                </StackPanel>

                                                <Path
                                                    x:Name="ExpandIcon"
                                                    Grid.Column="1"
                                                    Width="12"
                                                    Height="12"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M0,0 L8,8 L16,0"
                                                    Stretch="Uniform"
                                                    Stroke="#666666"
                                                    StrokeThickness="2">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0" CenterX="8" CenterY="4" />
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Grid>
                                        </Button>

                                        <ItemsControl
                                            x:Name="KnowledgePointsItemsControl"
                                            Margin="0"
                                            ItemsSource="{Binding KnowledgePoints}"
                                            Visibility="Collapsed">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Style="{StaticResource KnowledgeItemStyle}">
                                                        <Button
                                                            Click="KnowledgePointButton_Click"
                                                            Style="{StaticResource KnowledgeButtonStyle}"
                                                            Tag="{Binding}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    FontSize="13"
                                                                    Foreground="#333333"
                                                                    Text="{Binding Name}"
                                                                    TextWrapping="Wrap" />

                                                                <CheckBox
                                                                    Grid.Column="1"
                                                                    Click="MasteryCheckBox_Click"
                                                                    IsChecked="{Binding IsMastered}"
                                                                    Style="{StaticResource MasteredCheckBoxStyle}"
                                                                    Tag="{Binding}">
                                                                    <CheckBox.ToolTip>
                                                                        <ToolTip>
                                                                            <TextBlock Text="标记为已掌握" />
                                                                        </ToolTip>
                                                                    </CheckBox.ToolTip>
                                                                </CheckBox>
                                                            </Grid>
                                                        </Button>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border
                    x:Name="EmptyStatePanel"
                    Padding="40"
                    Visibility="Collapsed">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            Text="暂无知识点" />
                        <TextBlock
                            FontSize="13"
                            Foreground="#888888"
                            Text="当前项目还没有添加任何知识点"
                            TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </DockPanel>
        </Border>

        <Border
            Grid.Column="1"
            Margin="20"
            Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Padding="20,15"
                    Background="#F8F9FA"
                    BorderBrush="#E9ECEF"
                    BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock
                                x:Name="KnowledgePointTitle"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#333333"
                                Text="选择知识点" />
                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="掌握状态：" />
                                <TextBlock
                                    x:Name="MasteryStatusText"
                                    Margin="5,0,0,0"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#DC3545"
                                    Text="未掌握" />
                            </StackPanel>
                        </StackPanel>

                        <CheckBox
                            x:Name="MasteryCheckBox"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Click="DetailMasteryCheckBox_Click"
                            Content="标记为已掌握"
                            FontSize="12" />
                    </Grid>
                </Border>

                <ScrollViewer
                    Grid.Row="1"
                    Padding="20"
                    VerticalScrollBarVisibility="Auto">
                    <markdig:MarkdownViewer
                        x:Name="MarkdownViewer"
                        Background="Transparent"
                        Markdown="{Binding CurrentMarkdownContent}" />
                </ScrollViewer>

                <Border
                    x:Name="DetailEmptyStatePanel"
                    Grid.Row="1"
                    Padding="40"
                    Background="White"
                    Visibility="Visible">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            Text="选择知识点" />
                        <TextBlock
                            FontSize="13"
                            Foreground="#888888"
                            Text="请在左侧选择一个知识点查看详情"
                            TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>