<Window
    x:Class="ReciteHelper.SelectChapterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ReciteHelper.Utils.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReciteHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="章节选择 - ReciteHelper"
    Width="1000"
    Height="600"
    Background="#F5F7F9"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ChapterCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="MinWidth" Value="80" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA" />
                    <Setter Property="BorderBrush" Value="#007ACC" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ChapterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MasteryProgressStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8" />
            <Setter Property="Background" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <conv:MasteryLevelToColorConverter x:Key="MasteryLevelToColorConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="20,15"
            Background="White"
            BorderBrush="#E9ECEF"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            x:Name="ProjectNameText"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#333333"
                            Text="项目名称" />
                        <TextBlock
                            x:Name="ProjectPathText"
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="#666666"
                            Text="项目路径" />
                    </StackPanel>

                    <Button
                        x:Name="SimulateButton"
                        Margin="350,0,0,0"
                        VerticalAlignment="Center"
                        Click="SimulateButton_Click"
                        Content="模拟考试"
                        Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="CurrentTimeText"
                        FontSize="12"
                        Foreground="#666666"
                        Text="2024-01-01 12:00:00" />
                    <TextBlock
                        x:Name="LastAccessedText"
                        Margin="0,2,0,0"
                        FontSize="11"
                        Foreground="#888888"
                        Text="最后访问：2024-01-01" />
                </StackPanel>

                <Button
                    Grid.Column="2"
                    Padding="15,8"
                    Background="Transparent"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    Click="CloseButton_Click"
                    Content="关闭"
                    Cursor="Hand"
                    FontSize="12">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="#DDDDDD" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA" />
                                    <Setter Property="BorderBrush" Value="#007ACC" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,20"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#333333"
                    Text="章节列表" />
                <TextBlock
                    x:Name="ChapterStatsText"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="#666666"
                    Text="共 0 个章节" />
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ChaptersItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="280"
                                Height="140"
                                Margin="10,10"
                                Style="{StaticResource ChapterCardStyle}">
                                <Button
                                    Click="ChapterButton_Click"
                                    Style="{StaticResource ChapterButtonStyle}"
                                    Tag="{Binding}">
                                    <Grid Margin="20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <StackPanel
                                            Grid.Row="0"
                                            Margin="0,0,0,8"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Foreground="#333333"
                                                Text="{Binding Chapter.Name}" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontSize="14"
                                                Foreground="#666666"
                                                Text="{Binding Chapter.Number, StringFormat=' (第{0}章)'}" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="13"
                                                Foreground="#495057"
                                                Text="{Binding QuestionCount, StringFormat='\{0\} 道题目'}" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="2"
                                            Margin="0,8,0,0"
                                            Orientation="Vertical">
                                            <StackPanel Margin="0,0,0,4" Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    Text="掌握度：" />
                                                <TextBlock
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Foreground="{Binding MasteryLevel, Converter={StaticResource MasteryLevelToColorConverter}}"
                                                    Text="{Binding MasteryLevel, StringFormat='\{0:F0\}%'}" />
                                            </StackPanel>
                                            <ProgressBar
                                                Foreground="{Binding MasteryLevel, Converter={StaticResource MasteryLevelToColorConverter}}"
                                                Style="{StaticResource MasteryProgressStyle}"
                                                Value="{Binding MasteryLevel}" />
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border
                x:Name="EmptyStatePanel"
                Grid.Row="1"
                Margin="10"
                Padding="40"
                Background="White"
                BorderBrush="#E9ECEF"
                BorderThickness="1"
                CornerRadius="8"
                Visibility="Collapsed">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="#666666"
                        Text="暂无章节" />
                    <TextBlock
                        FontSize="13"
                        Foreground="#888888"
                        Text="当前项目还没有添加任何章节内容"
                        TextAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>